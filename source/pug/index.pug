doctype html
html(lang='ru')
	head
		include inc/vars.pug
		- var isIndexTmpl = true

		include inc/metadata.pug

		each verif in [{s: 'google-site-verification', code: 'Y-zrQS3gEUB2vkcCPbvcU7dhogBFKa_BV-rP_i2x79c'}, {s: 'yandex-verification', code: '37a9e7933989cd01'}, {s: 'msvalidate.01', code: '6EB38FA17104F2614498E05CF14876B9'}, {s: 'wmail-verification', code: '4520e9ca3d1a58da4ded056030b5bc6e'}]
			meta(name=`${verif.s}` content=`${verif.code}`)

		link(rel='canonical' href=`${URLs.same}`)

		each URL in ['radio', 'anime']
			link(rel='prerender' href=`/${URL}`)

		each URL in ['www.google-analytics.com', 'ssl.google-analytics.com', 'mc.yandex.ru', 'ymetrica.com', 'cdn.jsdelivr.net']
			link(rel='dns-prefetch' href=`//${URL}`)

		each CSS in ['aw-fonts', 'main']
			link(rel='stylesheet' href=`${paths.css}/${CSS}.min.css?v=${projectVer}`)
	body
		header.top-panel
			div.container
				a.logo(href='/' rel='home')
				div.brand #{title}
		main.btns
			div.container
				a(href='/radio' data-lang-title='radio') /radio
				a(href='/anime' data-lang-title='anime') /anime
		
		include inc/footer.pug
		
