doctype html
html(lang='ru')
	head
		include ../inc/vars.pug

		meta(charset='utf-8')
		title #{title} / Anime Main Player
		link(rel='shortcut icon' href=`${URLs.favicon}`)

		include ../inc/meta-viewport.pug
		meta(name='robots' content='noindex, nofollow')

		each URL in ['www.twitch.tv', 'api.twitch.tv', 'cvp.twitch.tv', 'client-event-reporter.twitch.tv', 'pubsub-edge.twitch.tv', 'pubster.twitch.tv', 'static-cdn.jtvnw.net', 'www.gstatic.com', 'imasdk.googleapis.com', 'api.mixpanel.com', 'sb.scorecardresearch.com']
			link(rel='dns-prefetch' href=`//${URL}`)

		style.
			html, body, .player { width: 100%; height: 100% }
			html, body {
				margin: 0; padding: 0;
				overflow: hidden;
			}
			body {
				background-color: #000;
				background-repeat: no-repeat;
				background-position: center bottom;
				background-size: cover;
			}
			.player { border: 0 }
	body
		iframe.player(src='https://player.twitch.tv/?channel=asianwave&autoplay=true' allowfullscreen)
