doctype html
html(lang='ru')
	head
		include ../inc/vars.pug

		meta(charset='utf-8')
		title #{title} / Anime Main Player
		link(rel='shortcut icon' href=`${URLs.favicon}`)

		meta(name='viewport' content='width=device-width, initial-scale=1, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no')
		meta(name='robots' content='noindex, nofollow')

		style.
			html, body, .player { width: 100%; height: 100% }
			html, body {
				margin: 0; padding: 0;
				overflow: hidden;
			}
			body {
				background-color: #000;
				//-background-image: url('#{paths.img}/anime-offline.png');
				background-repeat: no-repeat;
				background-position: center bottom;
				background-size: cover;
			}
			.player { border: 0 }
	body
		iframe.player(src='https://player.twitch.tv/?channel=asianwave&autoplay=true' allowfullscreen)
