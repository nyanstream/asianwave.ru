doctype html
html(lang='ru')
	head
		include inc/vars.pug

		meta(charset='utf-8')
		title #{title} / Авторизация

		meta(name='viewport' content='width=device-width, initial-scale=1, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no')

		link(rel='shortcut icon' href=`${URLs.favicon}`)
		meta(name='robots' content='noindex, follow')

		style input { width: 100%; margin-top: 3px }
	body(style='display: flex; justify-content: center')
		form(name='login' action='/api/admin.php' method='post')
			div(style='text-align: center')
				img(src=`${URLs.favicon}` alt='')
			p
				label(for='login') Имя пользователя или e-mail<br>
					input(type='text' name='login' maxlength='42' autocomplete='off' required)
			p
				label(for='pass') Пароль<br>
					input(type='password' name='pass' maxlength='42' autocomplete='off' required)
			p
				input(type='submit' name='auth' value='Войти')
