# DirectoryIndex perecat.html

# Кодировка
AddDefaultCharset utf-8

# Рерайт всех .html
RewriteEngine on
RewriteBase /
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /([^.]+)\.html\ HTTP
RewriteRule ^([^.]+)\.html$ /$1 [R=301,L]
RewriteCond %{REQUEST_URI} !(\.[^./]+)$
RewriteCond %{REQUEST_fileNAME} !-d
RewriteCond %{REQUEST_fileNAME} !-f
RewriteRule (.*) /$1.html [L]

# Удаление www из адреса
RewriteEngine on
RewriteCond %{HTTP_HOST} ^www\.
RewriteCond %{HTTPS}s ^on(s)|off
RewriteCond http%1://%{HTTP_HOST} ^(https?://)(www\.)?(.+)$
RewriteRule ^ %1%3%{REQUEST_URI} [R=301,L]

# Форсированный HTTPS
RewriteEngine on
RewriteCond %{HTTPS} !on
RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI}

# Обработка ошибок
Options All -Indexes
ErrorDocument 404 /apps/error.html
ErrorDocument 403 /apps/error.html

# Content Security Policy

<IfModule mod_headers.c>
Header set Strict-Transport-Security 'max-age=31536000; includeSubDomains; preload' env=HTTPS

Header set Content-Security-Policy "default-src 'self'; \
 connect-src 'self' https://*.asianwave.ru https://aw-api.blyat.science https://mc.yandex.ru; \
 child-src 'self' https://chatovod.ru https://asianwaveru.chatovod.ru https://*.youtube-nocookie.com; \
 frame-ancestors 'self' https://vk.com; \
 style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://fonts.googleapis.com; \
 font-src 'self' https://fonts.gstatic.com; \
 img-src 'self' data: https://aw-cdn.blyat.science https://*.google-analytics.com https://*.yandex.ru https://images.weserv.nl; \
 media-src 'self' blob: https://*.asianwave.ru; \
 script-src 'self' 'unsafe-inline' https://www.google-analytics.com https://google-analytics.com https://cdn.jsdelivr.net https://mc.yandex.ru https://*.cloudflare.com"
</IfModule>

# Редиректы

